extends layout

block content
  .container.form
    .row
      .main
        h3
          | Please Log In, or 
          a(href='/signup') Sign Up
        if success_msg
          each msg, i in success_msg
            .alert.alert-success #{success_msg}
        if error_msg
          each msg, i in error_msg
            .alert.alert-danger #{error_msg}   
        if error
          each msg, i in error
            .alert.alert-danger #{error}
        .row
          .col-xs-12.col-sm-12.col-md-12
            a.btn.btn-lg.btn-primary.btn-block(href='/auth/facebook') Facebook

        .login-or
          hr.hr-or
          span.span-or or
        form(role='form', method='POST', action='/login')
          .form-group
            label(for='inputUsername') Username
            input#inputUsername.form-control(type='text', name='username', placeholder='username')
          .form-group
            label(for='inputPassword') Password
            input#inputPassword.form-control(type='password', name='password', placeholder='password')
          button.btn.btn.btn-primary(type='submit')
            | Log In
        button.btn.btn.btn-primary.homeBtn(onclick="location.href = '/';" action='/')
          | Back to Home
